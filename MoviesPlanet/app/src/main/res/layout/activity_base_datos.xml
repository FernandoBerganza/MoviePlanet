<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título de la pantalla -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consulta de Películas"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="16dp" />

    <!-- Spinner para seleccionar el cine -->
    <TextView
        android:id="@+id/tvSelectCine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona un cine"
        android:textSize="18sp"
        android:paddingBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerCines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown" />

    <!-- Botón para consultar las películas disponibles en el cine seleccionado -->
    <Button
        android:id="@+id/btnConsultaPeliculas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultar Películas"
        android:layout_marginTop="16dp" />

    <!-- ListView para mostrar las películas disponibles en el cine seleccionado -->
    <TextView
        android:id="@+id/tvPeliculas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Películas Disponibles"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <ListView
        android:id="@+id/listPeliculas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="1dp" />

</LinearLayout>
