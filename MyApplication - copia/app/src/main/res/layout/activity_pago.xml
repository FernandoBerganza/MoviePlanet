<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F8F8F8">

    <!-- Título -->
    <TextView
        android:id="@+id/tv_title_pago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pago en Línea"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"/>

    <!-- Opción de tipo de tarjeta -->
    <RadioGroup
        android:id="@+id/rg_tipo_tarjeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/rb_debito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarjeta de Débito"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rb_credito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarjeta de Crédito"/>
    </RadioGroup>

    <!-- Número de tarjeta -->
    <EditText
        android:id="@+id/et_numero_tarjeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número de Tarjeta"
        android:inputType="number"
        android:maxLength="16"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#000"/>

    <!-- Fecha de vencimiento -->
    <EditText
        android:id="@+id/et_fecha_vencimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha de Vencimiento (MM/AA)"
        android:inputType="date"
        android:maxLength="5"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#000"/>

    <!-- CVV -->
    <EditText
        android:id="@+id/et_cvv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CVV"
        android:inputType="numberPassword"
        android:maxLength="3"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#000"/>

    <!-- Nombre del titular -->
    <EditText
        android:id="@+id/et_nombre_titular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del Titular"
        android:inputType="textPersonName"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#000"/>

    <!-- Botón para realizar el pago -->
    <Button
        android:id="@+id/btn_realizar_pago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Realizar Pago"
        android:background="@color/purple_500"
        android:textColor="#FFF"
        android:layout_marginTop="24dp"/>
</LinearLayout>
