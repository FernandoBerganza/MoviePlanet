<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">

        <!-- Cambiar MainActivity a Main_login como actividad principal -->
        <activity
            android:name=".Main_login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Mantener MainActivity como secundaria -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
        </activity>

        <!-- Agregar la declaración para la actividad de descripción de películas -->
        <activity
            android:name=".MovieDescriptionActivity"
            android:exported="true">
        </activity>

        <!-- Agregar la declaración para la actividad de configuraciones -->
        <activity
            android:name=".Main_configures"
            android:exported="true">
        </activity>

        <!-- Agregar la declaración para la actividad de compra de boletos -->
        <activity
            android:name=".Mainboleto"
            android:exported="true">
        </activity>

    </application>

</manifest>



